body
  background #26bce0
header
  background #03081C
  color #fff
  text-align center
  h1
    margin 0
    padding 1%
  h2
    margin 0
    padding 1%
section.fotos
  article
    width 100%
    &:nth-child(even)
      background #004976
    img
      width 300px
      height 300px
      border-radius 50%
      display block
      margin 1% auto
      padding-top 8%
    p
      text-align center
      padding 1%
      color #004976
      font-size 22px
      text-shadow 2px 2px 3px black
      font-family 'Bauhaus 93'
      &:nth-child(even)
        color #fff
h2.instrucciones
  text-align center
  color #fff
  font-size 16px
footer
  text-align center
  background orange
  color #fff
  font-weight bold
  padding 1%
